 <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.3</version>
        <configuration>
		<formats>
		<format></format>
		</formats>
		
          <check>
            <haltOnFailure>true</haltOnFailure>
            
            <lineRate>1</lineRate>
            <branchRate>0</branchRate>
           
         
            <totalLineRate>0</totalLineRate>
            <totalBranchRate>0</totalBranchRate>
          </check>
        </configuration>
        <executions>
          <execution>
            <phase>verify</phase>
            <goals>
              <goal>clean</goal>
              <goal>check</goal>
			  <goal>cobertura</goal>
            </goals>
          </execution>

        </executions>
      </plugin>

